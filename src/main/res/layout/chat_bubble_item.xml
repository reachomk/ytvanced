    <Space android:id="@+id/conversation_last_item_padding" android:layout_width="0dp" android:layout_height="@dimen/conversation_padding"/>
    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="?attr/textAppearanceCaption" android:textColor="?attr/ytTextDisabled" android:layout_gravity="start" android:id="@+id/conversation_reference_user_view" android:paddingTop="4dp" android:paddingBottom="@dimen/conversation_padding" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/conversation_reference_name_margin"/>
