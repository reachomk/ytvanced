<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/ui_back_button_holder" android:layout_width="84dp" android:layout_height="84dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <ImageButton android:layout_gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/ui_back_button" android:src="@drawable/quantum_ic_close_white_24" android:contentDescription="@string/back_button_content_description" style="@style/UiButton"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/ui_alignment_marker" android:background="@color/alignment_marker_color" android:layout_width="@dimen/alignment_marker_thickness" android:layout_height="@dimen/alignment_marker_height" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <FrameLayout android:id="@+id/ui_settings_button_holder" android:layout_width="84dp" android:layout_height="84dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true">
        <ImageButton android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@+id/ui_settings_button" android:src="@drawable/quantum_ic_settings_white_24" android:contentDescription="@string/settings_button_content_description" style="@style/UiButton"/>
    </FrameLayout>
</RelativeLayout>
