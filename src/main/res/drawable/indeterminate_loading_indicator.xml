<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <rotate android:fromDegrees="-90" android:toDegrees="640">
            <shape android:shape="ring" android:innerRadiusRatio="2.3" android:thicknessRatio="33" android:useLevel="false">
                <gradient android:startColor="@android:color/transparent" android:endColor="#ffffff" android:useLevel="false" android:angle="45" android:type="sweep" android:centerY="0.5"/>
            </shape>
        </rotate>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="90" android:toDegrees="-270">
            <shape android:shape="ring" android:innerRadiusRatio="2.3" android:thicknessRatio="33" android:useLevel="false">
                <gradient android:startColor="#888" android:endColor="@android:color/transparent" android:useLevel="false" android:angle="0" android:type="sweep" android:centerY="0.5"/>
            </shape>
        </rotate>
    </item>
</layer-list>
